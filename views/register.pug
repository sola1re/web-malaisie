doctype html
html(lang="en")
  head
    title Sign Up
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    style
      include ../public/stylesheets/style.css  
      include ../public/stylesheets/style-main.css
    style. 
      body{
          font-family: Arial, sans-serif;
          margin: 0;
          padding: 0;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          height: 100vh;
          background-color: #f4f4f4;
      }
      header{
        position:fixed;
        top:0;
        width:100%;
      }

      h1{
        background-color: #0096FF;
        color: white;
        text-align: center;
        padding: 1em;
      }

      main{
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: 300px;
      }

      .signup-container {
        padding: 2em;
      }

      

      form {
        display: flex;
        flex-direction: column;
      }

      label {
        margin-bottom: 0.5em;
        font-weight: bold;
      }

      input {
        padding: 0.5em;
        margin-bottom: 1em;
        border: 1px solid #ccc;
        border-radius: 4px;
      }

      button {
        padding: 0.7em;
        background-color: #0096FF;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      button:hover {
        background-color: #89CFF0;
      } 

      .username, .password{
        width : 220px;
      }
      select{
        margin-bottom: 20px;
      }
    
  body
    header
        a.button(href="/") Home 
        a.button(href="/loginadd") Add Question 
        a.button(href="/country/0") Quiz
        a.button(href="/about") About Us
    h1 Sign Up
    main
        .signup-container
            form(action="/register", method="post")
            
                label(for="username") Username:
                input.username(type="text", id="username", name="username", required)
            
                label(for="password") Password:
                input.password(type="password", id="password", name="password", required)
                label(for="region") Region:
                select(id="region" name="regions", required)
                  option(value="" selected disabled hidden) -- Select a Region --
                  option(value="Europe") Europe 
                  option(value="Asia") Asia 
                  option(value="North America") North America 
                  option(value="Oceania") Oceania 
                  option(value="South America") South America 
                  option(value="Africa") Africa 
                button(type="submit") Sign Up

        if results 
            h2   Registration successful!